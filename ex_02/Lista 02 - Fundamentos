 #include <iostream>
using namespace std;
#include <cmath>

int main() {
    
    float c1, c2,h;
    cout << "Digite o primeiro cateto: \n";
    cin >> c1;
    cout << "Digite o primeiro cateto: \n";
    cin >> c2;
    h = sqrt(c1 *c1 + c2 * c2);
    
    cout << "O valor da hipotenusa é: " << h << endl;
    

} 


9. 
#include <iostream>
using namespace std;

int main()
{
    float km, custo;
    cout << "Quantos kilometros você percorreu?: \n";
    cin >> km;
    
    if(km <= 50) {
       custo = km * 1.75;
       cout << "O custo é de: " << custo << endl;
      
    }
    
    else if (km > 50 && km < 150) { 
        custo = km * 1.65;
        cout << "o custo é: " << custo << endl;
        
    }
    
    else if (km >= 150) {
        custo = km * 1.50;
        cout << "o custo é: " << custo << endl; 
        
    }
}


