#include <iostream>
using namespace std;

int main(){

    float x, y, z; 
    x = ((7 + 3 * 6) /2 - 1);
    cout << x << endl;
    y = 2 % (2 + 2 * (2 / 2));
    cout << y << endl;
    z = (3 * 9 *(3+(9 * 3 / (3))));
    cout << z << endl;
} 

2. 

#include <iostream>
using namespace std;

int main(){

    int prod, quoc, x, y;
    cout << "Insira o primeiro valor: \n";
    cin >> x;
    cout << "Insira o segundo valor: \n";
    cin >> y; 
    prod = x * y;
    quoc = x / y;
    cout << "A multiplicação é igual a:\n" << prod << endl;
    cout << "A divisão é igual a: \n" << quoc;
    return 0;
    
} 

3. 

#include <iostream>
using namespace std;

int main(){

    float raio, d, a;
    cout << "Digite o valor do raio \n";
    cin >> raio;
    a = 3.14159 * (raio * raio);
    d = 2 *raio;
    cout << "A área é igual a: \n" << a << endl;
    cout << "O diametro é igual a: \n" << d;
    return 0;
    
} 


