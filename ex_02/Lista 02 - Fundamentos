#include <iostream>
using namespace std;


int main()
{

    cout << "Quadrado:" << endl;
    cout << "* * * * *" << endl;
    cout << "*       *" << endl;
    cout << "*       *" << endl;
    cout << "*       *" << endl;
    cout << "* * * * *" << endl;

    cout << endl << "Círculo Oval:" << endl;
    cout << "  * * * * *  " << endl;
    cout << "*           *" << endl;
    cout << "*           *" << endl;
    cout << "*           *" << endl;
    cout << "*           *" << endl;
    cout << "*           *" << endl;
    cout << "*           *" << endl;
    cout << "  * * * * *  " << endl;

    cout << endl << "Seta:" << endl;
    cout << "    *    " << endl;
    cout << "   * *   " << endl;
    cout << "  *   *  " << endl;
    cout << " * * * * " << endl;
    cout << "*       *" << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;
    cout << "    *  " << endl;

    

    cout << endl << "Losango:" << endl;
    cout << "    *    " << endl;
    cout << "   * *   " << endl;
    cout << "  *   *  " << endl;
    cout << " *     * " << endl;
    cout << "*       *" << endl;
    cout << " *     * " << endl;
    cout << "  *   *  " << endl;
    cout << "   * *   " << endl;
    cout << "    *    " << endl;

    return 0;
}



